<% for tag in @tags %>
	<%= tag.name%> 
	<% if current_user.tag_ids.include?(tag.id)%>
	<%= link_to "Unfollow", :controller => "tags", :action => "follow_tag", :id => tag.id%>
	<% else %>
	<%= link_to "Follow", :controller => "tags", :action => "follow_tag", :id => tag.id%>
	<% end %>
	<br />
<% end %>

