<%= form_tag :action => :send_msg do %>
	Title:<input type="text" id='msg_title' name = 'msg_title'/>
	</br>
	To:<input type="text" id='msg_to' name='msg_to' />
	</br>
	Body:<textarea id='msg_body' name='msg_body' rows="8" cols="40"></textarea>
	</br>
	<%= submit_tag "Send" %>
<% end %>
